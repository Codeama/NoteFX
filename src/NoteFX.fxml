<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NoteFXController">
  <bottom>
    <ScrollBar />
  </bottom>
  <center>
    <TextArea fx:id="textArea" onKeyPressed="#keyPressed" prefWidth="200.0" wrapText="true" />
  </center>
  <right>
    <ScrollBar orientation="VERTICAL" />
  </right>
  <top>
    <MenuBar fx:id="menu">
      <menus>
        <Menu fx:id="file" mnemonicParsing="false" onAction="#initialize" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem fx:id="open" mnemonicParsing="false" onAction="#onOpen" text="Open..." />
            <MenuItem fx:id="save" mnemonicParsing="false" onAction="#onSave" text="Save" />
            <MenuItem mnemonicParsing="false" onAction="#onSaveAs" text="Save As..." />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#onPrint" text="Print" />
            <MenuItem fx:id="exitFile" mnemonicParsing="false" onAction="#onExit" text="Exit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Find..." />
            <MenuItem mnemonicParsing="false" text="Find Next" />
            <MenuItem mnemonicParsing="false" text="Replace" />
            <MenuItem mnemonicParsing="false" text="Go To..." />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
</BorderPane>
